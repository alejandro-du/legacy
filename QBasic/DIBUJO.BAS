SCREEN 13
DIM NUM(13800)
1 PSET (X, Y), 15
A$ = INPUT$(1)
IF A$ = "Q" OR A$ = "q" THEN GOTO SUBE
IF A$ = "A" OR A$ = "a" THEN GOTO BAJA
IF A$ = "P" OR A$ = "p" THEN GOTO DERECHA
IF A$ = "O" OR A$ = "o" THEN GOTO IZQUIERDA
IF A$ = " " OR A$ = CHR$(13) THEN GOTO 123
GOTO 1
SUBE:
PRESET (X, Y)
Y = Y - 1
IF Y < 0 THEN Y = 0
GOTO 1
BAJA:
PRESET (X, Y)
Y = Y + 1
IF Y > 199 THEN Y = 199
GOTO 1
DERECHA:
PRESET (X, Y)
X = X + 1
IF X > 319 THEN X = 319
GOTO 1
IZQUIERDA:
PRESET (X, Y)
X = X - 1
IF X < 0 THEN X = 0
GOTO 1
123 :
X = 0: Y = 0: GOTO 1

