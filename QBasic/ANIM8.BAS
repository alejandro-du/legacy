CLS
BB = 10: AA = 10
1 LOCATE AA, 10: PRINT "A"
LOCATE BB, 15: PRINT "B"
A$ = INPUT$(1)
IF A$ = "A" THEN GOTO P
IF A$ = "B" THEN GOTO PB
IF A$ = "W" THEN GOTO MSA
IF A$ = "S" THEN GOTO MAA
IF A$ = "O" THEN GOTO MSB
IF A$ = "L" THEN GOTO MBA
P:
LOCATE 10, 10: PRINT "-"
FOR A = 1 TO 1000: NEXT A
LOCATE 10, 10: PRINT "A"
GOTO 1
PB:
LOCATE 10, 15: PRINT "-"
FOR A = 1 TO 1000: NEXT A
LOCATE 10, 15: PRINT "B"
GOTO 1
MAA:
LOCATE AA, 10: PRINT " "
AA = AA + 1
GOTO 1
MSA:
LOCATE AA, 10: PRINT " "
AA = AA - 1
GOTO 1
MBA:
LOCATE BB, 15: PRINT " "
BB = BB + 1
GOTO 1
MSB:
LOCATE BB, 15: PRINT " "
BB = BB - 1
GOTO 1

