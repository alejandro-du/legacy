SCREEN 13
CLS
A = 100: B = 100
LINE (0, A)-(320, A), 1
INTRODUCIR:

M$ = INKEY$
IF M$ = "6" THEN GOTO DERECHA
IF M$ = "4" THEN GOTO IZQUIERDA
IF M$ = "8" THEN GOTO ARRIBA
IF M$ = "2" THEN GOTO ABAJO ELSE GOTO INTRODUCIR

ARRIBA:
A = A - 2
B = B - 2
LINE (0, A + 2)-(320, B + 2), 0
LINE (0, A)-(320, B), 1
GOTO INTRODUCIR

ABAJO:
B = B + 2
A = A + 2
LINE (0, A - 2)-(320, B - 2), 0
LINE (0, A)-(320, B), 1
GOTO INTRODUCIR

DERECHA:
A = A + 2
B = B - 2
LINE (0, A - 2)-(320, B + 2), 0
LINE (0, A)-(320, B), 1
GOTO INTRODUCIR

IZQUIERDA:
A = A - 2
B = B + 2
LINE (0, A + 2)-(320, B - 2), 0
LINE (0, A)-(320, B), 1
GOTO INTRODUCIR

